---
import Navbar from "../../../shared/components/Navbar.astro"
---

<script>
    import { auth } from "../../../shared/scripts/Supabase";
    (window as any).auth = auth
</script>

<Navbar>
    <template x-if="user.authenticated">
        <div>
            <ul>
                <li><a role="link" href="#">Home</a></li>
                <li><a role="link" href="#">Cursos</a></li>
                <li><a role="link" href="#">Certificados</a></li>
            </ul>
            <ul>
                <li><a role="link" href="#" @click="await auth.logout() ; window.location.href = ''">Sair</a></li>
                <li><a role="link" href={import.meta.env.SITE_URL}>Ir para o site</a></li>
            </ul>
        </div>
    </template>
    <template x-if="!user.authenticated">
        <div>
            <ul>
                <li><a role="link" href={import.meta.env.SITE_URL}>Home</a></li>
            </ul>
            <ul>
                <li><a role="link" href="/login">Login</a></li>
                <li><a role="link" href="/criar-conta">Criar Conta</a></li>
            </ul>
        </div>
    </template>
</Navbar>

<style>
    div {
        > a {
            display: none;
            align-items: center;
        }
        
        ul {
            display: flex;
            flex-direction: column;
            list-style: none;
            gap: 1rem;
            
            > * {
                padding-block: 1rem;
            }
        }
    }
    
    a {
        color: black;
        text-decoration: none;
    }
    
    > * {
        display: flex;
        justify-content: space-between;
    }
    
    @media (min-width: 767px) {
        div {
            display: flex ;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            > a {
                display: flex;
            }
            > ul {
                flex-direction: row;
            }
